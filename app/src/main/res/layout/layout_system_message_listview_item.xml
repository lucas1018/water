<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:id="@+id/system_message_item_level"
        android:textColor="#333333"
        android:layout_height="50dp" />
<TextView
    android:padding="10dp"
    android:layout_width="match_parent"
    android:textColor="#999999"

    android:id="@+id/system_message_item_content"
    android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:src="@drawable/timegray"
                android:layout_height="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="14dp"
                android:textSize="12dp"
                android:textColor="#999999"
                android:id="@+id/system_message_item_createTime"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1px" android:background="#ABABAB"></View>
</LinearLayout>