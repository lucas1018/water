<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.zerone.water.activity.MealActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#008aca">

        <ImageView
            android:id="@+id/work_back"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="考勤打卡"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <TextView
        android:id="@+id/dateString"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#101010"
        android:textSize="15dp"
        android:text="TextView" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="104dp" />

    <TextView
        android:id="@+id/textNull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
        android:textSize="10dp"
        android:text="" />

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/clock_morning" />

            <LinearLayout
                android:id="@+id/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/morningLayout"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="上班打卡 09:00" />

                    <TextView
                        android:id="@+id/morningNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="TextView"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/bnav_pick_in_map_centerpoint" />

                        <TextView
                            android:id="@+id/morninglocation"
                            android:layout_width="170dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/morningrelocation"
                            android:layout_width="100dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:text="重新定位"
                            android:textColor="#008ACA"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="现场照片" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/morningimageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="#ffffff"
                            app:srcCompat="@mipmap/camera" />

                        <ImageView
                            android:id="@+id/morningImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="下班时间 17:30" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/afterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/afterNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="TextView"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/bnav_pick_in_map_centerpoint" />

                        <TextView
                            android:id="@+id/afterlocation"
                            android:layout_width="170dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/afterrelocation"
                            android:layout_width="100dp"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:text="重新定位"
                            android:textColor="#008ACA"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="现场照片" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/afterimageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="#ffffff"
                            app:srcCompat="@mipmap/camera" />

                        <ImageView
                            android:id="@+id/afterImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            app:srcCompat="@mipmap/approval" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/clockInLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/clockIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1AAD19"
            android:text="上班打卡"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>