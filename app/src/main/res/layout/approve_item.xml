<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/item_user_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:layout_toRightOf="@id/item_user_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/item_abstruct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_user_icon"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#544e4e"
            android:text = "采购单申请审批"/>

        <TextView
            android:id="@+id/item_apply_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_user_icon"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#544e4e"
            android:text = "张三"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text = "2019/06/01"/>

        <ImageView
            android:id="@+id/item_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/my_right"
            />

    </LinearLayout>


</RelativeLayout>