<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="cn.zerone.water.activity.MealActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#008aca">

        <ImageView
            android:id="@+id/car_back"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="车辆打卡"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/car_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="历史记录"
            android:textColor="#fff"
            android:textSize="16sp" />


    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="车牌号码"
                android:layout_marginRight="20dp"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/carNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/carNumberButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                app:srcCompat="@mipmap/right_array" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="车         型"
                android:layout_marginRight="20dp"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/carType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="invisible"
                app:srcCompat="@mipmap/right_array" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="所属项目"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/relatedProject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/relatedProjectButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                app:srcCompat="@mipmap/right_array" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="所在站点"
                android:layout_marginRight="20dp"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/relatedStation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/relatedStationButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                app:srcCompat="@mipmap/right_array" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="打卡类型"
                android:layout_marginRight="20dp"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/clockInType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/clockInTypeButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                app:srcCompat="@mipmap/right_array" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="当前位置"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/relocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#008ACA"
                android:textSize="14sp"
                android:text="重新定位" />
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:textColor="#999999"
            android:text="现场照片" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/carPictureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                app:srcCompat="@mipmap/camera" />

            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@mipmap/attendance" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/clockInButton"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#008ACA"
            android:gravity="center"
            android:text="添加"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>