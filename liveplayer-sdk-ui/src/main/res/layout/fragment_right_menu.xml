<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|left"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_right_online_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/live_ic_useronline" />

    <ImageView
        android:id="@+id/fragment_right_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/live_ic_lightpen" />

    <ImageView
        android:id="@+id/fragment_right_ppt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/live_ic_ppt" />

    <FrameLayout
        android:id="@+id/fragment_right_speak_wrapper"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <com.baijiahulian.live.ui.viewsupport.CountdownCircleView
            android:id="@+id/fragment_right_hand_countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fragment_right_speak_apply"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:src="@drawable/live_ic_handup" />

    </FrameLayout>

</LinearLayout>